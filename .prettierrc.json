{
    "bracketSpacing": false,
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 120,
    "bracketSameLine": true,
    "htmlWhitespaceSensitivity": "ignore",
    "overrides": [
        {
            "files": "*.js",
            "options": {
                "semi": true
            }
        },
        {
            "files": ["*.yaml", "*.yml"],
            "options": {
                "tabWidth": 2,
                "singleQuote": false
            }
        }
    ]
}
